extends layout

block content
  h1= title
  - let dogs = results;

  div(class="container-fluid")
      each dog in dogs
        - let destination = `dispatch("/dogs/update?id=${dogs._id}")`
        div(class="col-sm-2")
          p dogsdogs_type: #{dogs.dogs_type}
          p dogssize: $#{dogs.size}
          p dogscost: #{dogs.cost}
        button.btn.btn-sm.btn-primary.ml-1(onclick= destination) Update
        br 
        br

  script.
    function dispatch(path) {
      window.location.href = path;
    }